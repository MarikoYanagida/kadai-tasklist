<ul class="media-list">
  <% tasklist.each do |tasklist| %>
  
  <% user = tasklist.user %>
  
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="
        <%= graavatar_url(user, options = {size: 50}) %>
        " alt="">
        </div>
        <div class="media-body">
          <div>
            <%= link_to user.name, user_path(user) %>
              <span class="text-muted">posted at 
                <%= tasklist.created_at %>
              </span>
          </div>
          <div>
            <p>
              <%= tasklist.content %>
            </p>
          </div>
          <div>
            <% if current_user == micropost.user %>
            <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?"}, class: 'btn btn-danger btn-xs' %>
            <% end %>
          </div>
        </div>
    </li>
    
    <% end %>
    
    <%= paginate microposts %>
  
</ul>

